<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4F8A92"
    tools:context=".auth.SplashFragment">


    <LinearLayout

        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvEcomm"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:text="E-Com"
                android:textColor="#000000"
                android:textSize="55sp"
                android:textStyle="bold" />

            <TextView

                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:text="Merce"
                android:textColor="#FDFBFB"
                android:textSize="55sp"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="234.00dp"
            android:layout_height="2.60dp"
            android:layout_marginTop="26.00dp"
            android:layout_weight="3"
            android:background="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your own mart"
            android:textColor="#010310"
            android:textSize="19dp"
            android:textStyle="italic" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>